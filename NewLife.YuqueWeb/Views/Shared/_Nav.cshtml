@using NewLife.YuqueWeb.Entity
@{
    var list = Book.GetValids();
}
<ol class="breadcrumb">
    <li><a href="~/">首页</a></li>
    @foreach (var cat in list)
    {
        <li>
            <a href="/@cat.Code">@cat.Name</a>
        </li>
    }
    <li class="active">
        <a href="#">当前</a>
    </li>
</ol>